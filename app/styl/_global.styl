// ----------
// Global elements
// ----------

html, body, #app
	height: 100%

a
	color: inherit
	text-decoration: none

img, svg
	display: block
	height: auto
	max-width: 100%

h1, h2, h3, h4, h5, p
	font-weight normal
	mgn(1,0)
	max-width: $pwidth*1em

h1
	font-family $integral
	fs(mp(5))

	+below($mobile)
		fs(mp(4))

h2
	color $red
	fs(mp(4))

h3
	fs(mp(3))

h4
	fs(mp(2))

h5
	fs(mp(1))

p
	+below($mobile)
		fs(mp(1))

pre
	font-family: monospace
	fs(mp(0))

ul, ol
	mgn(1,0)
	pad(0,0,0,.5)

	li
		mgn(.5,0)

ul
	list-style: disc

ol
	list-style: decimal

form
	mgn(1,0)

.form-row
	mgn(.5,0)

button, input, label, select, textarea
	display: block
	font: inherit
	line-height: $let
	width: 100%

button, input, select, textarea
	appearance: none
	background: none
	border: 1px solid $red
	outline: 0

	&:focus
		border-color: $blk

button, [type=submit]
	cursor: pointer
	mgn(0, auto)
	pad(.25, 1)
	width: auto

// ----------
// clearfix
// ----------

.cf
	*zoom: 1

	&::before, &::after
		content: ' '
		display: block

	&::after
		clear: both
